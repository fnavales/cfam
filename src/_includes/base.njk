  {% block navbar %}
    <nav class="navbar navbar-expand-lg site-navigation nav-bg">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="{{nav.navLogo}}" alt="nav-logo" />
        </a>
        <button
          class="navbar-toggler collapsed"
          type="button"
          data-toggle="collapse"
          data-target="#sitenavbar"
        >
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="sitenavbar">
          <ul class="navbar-nav ml-auto main-nav">
            {% for navLink in nav.navLinks %}
            <li class="nav-item">
              {% if navLink.route == "home" %}
                <a class="nav-link" href="/">{{navLink.name | capitalize}}</a>
              {% else %}
                <a class="nav-link" href="/{{navLink.route}}">{{navLink.name | capitalize}}</a>
              {% endif %} 
            </li>
            {% endfor %}
            {% if nav.navBtnLink != "" %}
                <li class="nav-item">
                  <a class="nav-link btn btn-sm btn-primary btn-sm-rounded" href="/{{nav.navBtnLink}}">
                    <span class="btn-area">
                      <span data-text="{{nav.navBtnText}}">
                        {{nav.navBtnText}}
                      </span>
                    </span>
                  </a>
                </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>
