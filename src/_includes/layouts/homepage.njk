{% extends "base.njk" %}

{% block content %}

    <section class="site-hero">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <div class="site-hero-content text-center">
              <h1>
                {{hero.title.firstPara}}
                <br>
                {{hero.title.secondPara}}
              </h1>
              <ul class="site-hero-content-buttons">
                <li>
                  <a href="{{hero.seeWorkBtn.link}}" class="btn btn-primary scroll-to">
                    <span class="btn-area">
                      <span data-text="{{hero.seeWorkBtn.text}}">
                        {{hero.seeWorkBtn.text}}
                      </span>
                    </span>
                  </a>
                </li>
                <li>
                  <a href="{{hero.connectBtn.link}}" target="_blank" class="btn btn-secondary">
                    <span class="btn-area">
                      <span data-text="{{hero.connectBtn.text}}">
                        {{hero.connectBtn.text}}
                      </span>
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <a href="#project" class="site-hero-scroll scroll-to">
        <img decoding="async" loading="lazy" src="/assets/images/arrow-down.svg" alt="arrow-down">
      </a>
    </section>

    <section class="site-project" id="project">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h3>{{portfolio.subTitle}}</h3>
              <p>{{portfolio.title}}</p>
            </div>
          </div>
          {% for portfolio in collections.portfolios | sortByOrder | limit(6) %}
          <div class="col-lg-4 col-md-10 mx-auto">
            <div class="site-project-item">
              <div class="site-project-item-thumb">
                <img decoding="async" loading="lazy" src="{{portfolio.data.img}}" alt="project-thumb">
              </div>
              <a href="{{portfolio.data.page.url}}">
                <div class="site-project-item-content">
                  <span>{{portfolio.data.subTitle}}</span>
                  <h3>{{portfolio.data.title}}</h3>
                  <a href="{{portfolio.data.page.url}}" class="read-more">{{portfolio.data.linkText}}</a>
                </div>
              </a>
            </div>
          </div>
          {% endfor %}
          <div class="col-12 text-center text-lg-left">
            <a href="/{{portfolio.seeAllbtn.link}}" class="site-project-cta">{{portfolio.seeAllbtn.text}}</a>
          </div>
        </div>
      </div>
    </section>

    <section class="site-counter" id="counter">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2 class="text-white">{{achieve.title}}</h2>
            </div>
          </div>
          <div class="site-counter-body">
            {% for achievement in achieve.achievements %}
            <div class="col-lg-4 col-md-6">
              <div class="site-counter-item">
                <h3 class="site-counter-item-number">{{achievement.counter}}</h3>
                <span class="site-counter-item-title">{{achievement.title}}</span>
              </div>
            </div> 
            {% endfor %}
          </div>
        </div>
      </div>
    </section>

    <section class="site-homologado">
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
            <div>
              <div class="section-title">
                <h3>{{homologacion.subTitle}}</h3>
                <p>{{homologacion.title}}</p>
              </div>
            </div>
            <div class="site-homologado-wrapper">
              {% for entidad in homologacion.entidades %}
                <img decoding="async" loading="lazy" src="{{entidad.img}}" alt="entity-logo">
              {% endfor %}
            </div>
          </div>
          <div class="col-lg-6">
            <div class="section-title">
              <h3>{{clients.title}}</h3>
            </div>
            <div class="site-client-wrapper">
              {% for trustedClient in clients.trustedClients %}
              <div class="site-client-item">
                <img decoding="async" loading="lazy" src="{{trustedClient}}" alt="client-logo">
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="site-testimonial">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h3>
                {{testimonials.title}}
              </h3>
            </div>
          </div>
          {% for opinion in testimonials.opinion %}
          <div class="col-lg-3 col-md-6">
            <div class="site-testimonial-item">
              <div class="site-testimonial-item-header">
                <div class="person">
                  <h5>{{opinion.name}}</h5>
                  <div class="stars">
                    <img draggable="false" role="img" alt="⭐" src="https://s.w.org/images/core/emoji/15.0.3/svg/2b50.svg">
                    <img draggable="false" role="img" alt="⭐" src="https://s.w.org/images/core/emoji/15.0.3/svg/2b50.svg">
                    <img draggable="false" role="img" alt="⭐" src="https://s.w.org/images/core/emoji/15.0.3/svg/2b50.svg">
                    <img draggable="false" role="img" alt="⭐" src="https://s.w.org/images/core/emoji/15.0.3/svg/2b50.svg">
                    <img draggable="false" role="img" alt="⭐" src="https://s.w.org/images/core/emoji/15.0.3/svg/2b50.svg">
                  </div>
                </div>
              </div>
              <p class="site-testimonial-item-body">
                {{opinion.comment}}
              </p>
            </div>
          </div> 
          {% endfor %}
        </div>
      </div>
    </section>
  
{% endblock %}