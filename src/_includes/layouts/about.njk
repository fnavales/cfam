{% extends "base.njk" %}

{% block content %}
    <section class="site-project-header">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-8">
            <div class="site-project-header-content">
              <h1>
                {{ content | safe}}
              </h1>
            </div>
          </div>
          <div class="col-lg-4">
            <a href="#about" class="site-project-header-action scroll-to">
              <span>Con√≥cenos</span>
              <img decoding="async" loading="lazy" src="/assets/images/arrow-down.svg" alt="arrow-down">
            </a>
          </div>
        </div>
      </div>
    </section>

     <section class="site-team" id="about">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>
                {{team.title}}
              </h2>
            </div>
          </div>
          {% for teamMember in team.teamMembers %}
          <div class="col-12">
            <div class="site-team-member">
              <div class="site-team-member-image">
                <img decoding="async" loading="lazy" src="{{teamMember.img}}" alt="team-member">
              </div>
              <div class="site-team-member-content">
                <h3>{{teamMember.name}}</h3>
                <p>{{teamMember.dig}}</p>
                <ul class="site-team-member-social">
                  {% for social in teamMember.social %}
                  <li>
                    <a href="{{social.link}}">
                      <i class="fa fa-{{social.icon}}"></i>
                    </a>
                  </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <section class="site-expertise">
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <div class="section-title">
              <h2>{{expertise.title}}</h2>
            </div>
          </div>
          <div class="col-md-6">
            <ul class="site-expertise-list">
              {% for expertIn in expertise.expertIn %}
              <li>{{expertIn}}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </section>

{% endblock %}