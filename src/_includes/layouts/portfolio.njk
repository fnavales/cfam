{% extends "base.njk" %}

{% block content %}
    <section class="site-project-header">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-8">
            <div class="site-project-header-content">
              <h1>
                {{ content | safe}}
              </h1>
            </div>
          </div>
          <div class="col-lg-4">
            <a href="#project" class="site-project-header-action scroll-to">
              <span>Explora</span>
              <img decoding="async" loading="lazy" src="/assets/images/arrow-down.svg" alt="arrow-down">
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="site-project" id="project">
        <div class="container">
          <div class="row justify-content-end">
            <div class="col-lg-auto">
              <div class="alert alert-primary" role="alert">
                Nuestros cursos tienen diferentes modalidades PRESENCIAL, SEMI-PRESENCIAL, 100% ONLINE.
              </div>
            </div>
          </div>
          <div class="row">
            {% for portfolio in portfolios %}
            <div class="col-lg-4 col-md-10">
              <div class="site-project-item">
                <div class="site-project-item-thumb">
                  <img decoding="async" loading="lazy" src="{{portfolio.data.img}}" alt="project-thumb">
                </div>
                <a href="{{portfolio.url}}">
                  <div class="site-project-item-content">
                    <span>{{portfolio.data.subTitle}}</span>
                    <h3>{{portfolio.data.title}}</h3>
                    <a href="{{portfolio.url}}" class="read-more">{{portfolio.data.linkText}}</a>
                  </div>
                </a>
              </div>
            </div>
            {% endfor %}
    
            {% if pagination.href.next or pagination.href.previous %}
              <div class="col-12">
                <div class="site-project-pagination">
                  <nav>
                    <ul class="pagination">
                      {% if pagination.href.previous %}
                      <li class="page-item">
                          <a class="page-link" href="{{pagination.href.previous}}">
                              <span aria-hidden="true">&laquo;</span>
                              <span class="sr-only">Anterior</span>
                          </a>
                      </li>
                      {% endif %}
                      {% for pageEntry in pagination.hrefs %}
                      <li {% if page.url == pageEntry %}
                            class="page-item active"><a class="page-link" href="{{pageEntry}}">{{loop.index}}</a></li>
                          {% else %}
                            class="page-item"><a class="page-link" href="{{pageEntry}}">{{loop.index}}</a></li>
                          {% endif %}
                      {% endfor %}
                      {% if pagination.href.next %}
                      <li class="page-item">
                          <a class="page-link" href="{{pagination.href.next}}">
                              <span aria-hidden="true">&raquo;</span>
                              <span class="sr-only">Siguiente</span>
                          </a>
                      </li>
                      {% endif %}
                    </ul>
                  </nav>
                </div>
              </div>
            {% endif %}
          </div>
        </div>
    </section>
{% endblock %}